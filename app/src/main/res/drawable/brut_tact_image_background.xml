<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/brut_color"
                android:endColor="@color/tact_color"
                android:type="linear"/>
            <corners android:radius="@dimen/item_image_corner_radius"/>
        </shape>
    </item>

    <item
        android:top="@dimen/image_border_width"
        android:bottom="@dimen/image_border_width"
        android:right="@dimen/image_border_width"
        android:left="@dimen/image_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/item_image_corner_radius"/>
        </shape>
    </item>
</layer-list>